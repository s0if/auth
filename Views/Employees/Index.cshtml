@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<a href="/employees/create" class="btn btn-success"> New</a>
<table class="table">
    <thead>
        <tr>
            <td>
                @Html.DisplayNameFor(model=>model.Id)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Name)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Email)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Password)
            </td>
            <td>
                Action
            </td>
        </tr>
    </thead>
    <tbody>
        @{
           foreach(var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.Password
                    </td>
                    <td>
                        <a asp-controller="employees" asp-action="update" asp-route-id="@item.Id">update</a>
                       <a asp-controller="employees" asp-action="delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>

                }
          }
    </tbody>
</table>

